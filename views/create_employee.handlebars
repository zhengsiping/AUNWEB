<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{title}}</h1>
  </div>
</div>

<form method="post" action="/employees/create">
  <div class="form-group">
    <label for="usernameInput">用户名</label>
    <input type="text" name="username" class="form-control" id="usernameInput" placeholder="输入用户名">
    <small id="usernameInput" class="form-text text-muted">用户名由英文字母, 阿拉伯数字, 下划线构成.</small>
  </div>
  <div class="form-group">
    <label for="emailInput">Email address</label>
    <input type="email" name="email" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="输入邮箱">
  </div>
  <div class="form-group">
    <label for="lastNameInput">姓</label>
    <input type="text" name="lastName" class="form-control" id="lastNameInput" placeholder="输入姓">
  </div>
  <div class="form-group">
    <label for="firstNameInput">名</label>
    <input type="text" name="firstName" class="form-control" id="firstNameInput" placeholder="输入名">
  </div>
  <div class="form-group">
    <label for="passwordInput">密码</label>
    <input type="password" name="password" class="form-control" id="passwordInput" placeholder="密码">
    <small id="passwordInput" class="form-text text-muted">英文字母, 阿拉伯数字, _#$%%^&*!@构成.</small>
  </div>
  <button type="submit" class="btn btn-primary">提交</button>
</form>