<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{title}}</h1>
  </div>
</div>

{{#if errors}}
  <div class="alert alert-danger" role="alert">
    {{#errors}}
      <p>
        {{{.}}}
      </p>
    {{/errors}}
  </div>
{{/if}}
<form method="post" action="{{action}}">
  <div class="form-group">
    <label for="usernameInput">用户名</label>
    <input type="text" name="username" value="{{model.username}}"class="form-control" id="usernameInput" placeholder="输入用户名">
    <small id="usernameInput" class="form-text text-muted">用户名由英文字母, 阿拉伯数字, 下划线构成.</small>
  </div>
  <div class="form-group">
    <label for="emailInput">Email address</label>
    <input type="email" name="email" value="{{model.email}}" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="输入邮箱">
  </div>
  <div class="form-group">
    <label for="nameInput">姓名</label>
    <input type="text" name="name" value="{{model.name}}" class="form-control" id="nameInput" placeholder="输入姓名">
  </div>
  <div class="form-group">
    <label for="phoneInput">手机</label>
    <input type="text" name="phone" value="{{model.phone}}" class="form-control" id="phoneInput" placeholder="输入电话">
  </div>
  <div class="form-group">
    <label for="passwordInput">密码</label>
    <input type="password" name="password" class="form-control" id="passwordInput" placeholder="密码">
    <small id="passwordInput" class="form-text text-muted">英文字母, 阿拉伯数字, _#$%%^&*!@构成.</small>
  </div>
  <div class="form-group">
    <label for="passwordInput">确认密码</label>
    <input type="password" name="confirmPassword" class="form-control" id="passwordInput" placeholder="密码">
    <small id="passwordInput" class="form-text text-muted">英文字母, 阿拉伯数字, _#$%%^&*!@构成.</small>
  </div>
  <button type="submit" class="btn btn-primary">提交</button>
</form>