<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{title}}</h1>
  </div>
</div>

<form method="post" action="/admin/device/create">
  <div class="form-group">
    <label for="deviceNameInput">设备名</label>
    <input type="text" name="name" class="form-control" id="deviceNameInput" placeholder="输入设备名">
    <small id="usernameInput" class="form-text text-muted">字母，数字，中文字符，请勿包含特殊字符</small>
  </div>
  <div class="form-group">
    <label for="deviceType">设备类型</label>
    <select class="form-control" name="typeId" id="deviceType">
      <option value="">请选择设备类型</option>
      {{#deviceTypes}}
        <option value={{id}}>{{name}}</option>
      {{/deviceTypes}}
    </select>
  </div>
  <div class="form-group">
    <label for="deviceWorkstation">移动站</label>
    <select class="form-control" id="deviceWorkstation" name="workstationId">
      <option value="">请选择移动站</option>
      {{#workstations}}
        <option value={{id}}>{{name}}</option>
      {{/workstations}}
    </select>
  </div>
  <button type="submit" class="btn btn-primary">提交</button>
</form>