<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{title}}</h1>
  </div>
</div>
{{#createdMessage}}<div class="alert alert-success" role="alert">{{createdMessage}}</div>{{/createdMessage}}
<table class="table table-striped">
  <thead>
  <tr>
    <th>编号</th>
    <th>设备名</th>
    <th>类型</th>
    <th>所在移动站</th>
    <th>状态</th>
  </tr>
  </thead>
  <tbody>
    {{#devices}}
      <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>{{type.name}}</td>
        <td>{{workstation.name}}</td>
        <td>{{status.status.name}}</td>
      </tr>
    {{/devices}}
  </tbody>
</table>
<a href="/v/devices/create" class="btn btn-primary">新建设备</a>
